@{
ViewBag.Title = "General Setup";
ViewBag.SubTitle = "Company";
}

<div class="card-header">
    <h4 class="card-title">@ViewBag.SubTitle</h4>
</div>
<div class="card-content">
    <div class="card-body">
        <form class="form" method="post">
            <div class="row">
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="Company_Name">Name</label>
                        <input type="text" id="Company_Name"  minlength="3" maxlength="10" required class="form-control" placeholder="Company Name" name="Company_Name">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="company_desc">Descritption</label>
                        <input type="text" id="company_desc" class="form-control" placeholder="Company Description" name="company_desc">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="city">Address</label>
                        <input type="text" id="Company_address" class="form-control" placeholder="Address" name="Company_address">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="Company_phones">Phone</label>
                        <input type="text" id="Company_phones" class="form-control" name="Company_phones" placeholder="Phones">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="Company_fax">FAX</label>
                        <input type="text" id="Company_fax" class="form-control" name="Company_fax" placeholder="FAX">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="Company_email">Email</label>
                        <input type="email" id="Company_email" class="form-control" name="Company_email" placeholder="Email">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="CityName">City</label>
                        <input type="text" id="CityName" class="form-control" name="CityName" placeholder="City">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="PostCode">Postal Code</label>
                        <input type="text" id="PostCode" class="form-control" name="PostCode" placeholder="Post Code">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="STaxRegNo">Saletax Reg. No.</label>
                        <input type="number" id="STaxRegNo" class="form-control" name="STaxRegNo" placeholder="Saletax Registered No.">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="NationalTaxNo">National Tax No.</label>
                        <input type="number" id="NationalTaxNo" class="form-control" name="NationalTaxNo" placeholder="National Tax No.">
                    </div>
                </div>

                <div class="col-12 d-flex justify-content-end">
                    <button type="button" id="btnSave" class="btn btn-primary me-1 mb-1" onclick="onSave()">Submit</button>
                    <button type="reset" class="btn btn-light-secondary me-1 mb-1">Reset</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>


</script>