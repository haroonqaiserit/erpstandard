@model ERPStandard.DbEntities.Company1
@{
    ViewBag.Title = "General Setup";
    ViewBag.SubTitle = "Company Edit";
}

<div class="card-header">
    <h4 class="card-title">@ViewBag.SubTitle</h4>
</div>
<div class="card-content">
    <div class="card-body">
        <form class="form" method="post">
            <div class="row">
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="CompNo">Comp No</label>
                        <input type="text" disabled id="CompNo" class="form-control data-id" placeholder="Comp ID" name="CompNo" value="@Model.CompNo">
                    </div>
                </div>

                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="Company_Name">Name</label>
                        <input type="text" id="Company_Name"  minlength="3" maxlength="50" class="form-control data-id" placeholder="Company Name" name="Company_Name" value="@Model.Company_Name">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="company_desc">Descritption</label>
                        <input type="text" id="company_desc" minlength="3" maxlength="100" class="form-control" placeholder="Company Description" name="company_desc" value="@Model.company_desc">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="city">Address</label>
                        <input type="text" id="Company_address" minlength="3" maxlength="50" class="form-control" placeholder="Address" name="Company_address" value="@Model.Company_address">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="Company_phones">Phone</label>
                        <input type="text" id="Company_phones"  minlength="3" maxlength="50" class="form-control" name="Company_phones" placeholder="Phones" value="@Model.Company_phones">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="Company_fax">FAX</label>
                        <input type="text" id="Company_fax" minlength="3" maxlength="50" class="form-control" name="Company_fax" placeholder="FAX" value="@Model.Company_fax">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="Company_email">Email</label>
                        <input type="email" id="Company_email" minlength="3" maxlength="50" class="form-control" name="Company_email" placeholder="Email" value="@Model.Company_email">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="CityName">City</label>
                        <input type="text" id="CityName" minlength="3" maxlength="25" class="form-control" name="CityName" placeholder="City" value="@Model.CityName">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="CompanyState">State</label>
                        <input type="text" id="CompanyState" minlength="3" maxlength="25" class="form-control" name="CompanyState" placeholder="CompanyState" value="@Model.CompanyState">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="PostCode">Postal Code</label>
                        <input type="text" id="PostCode"  minlength="3" maxlength="10" class="form-control" name="PostCode" placeholder="Post Code" value="@Model.PostCode">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="STaxRegNo">Saletax Reg. No.</label>
                        <input type="number" id="STaxRegNo" minlength="3" maxlength="25" class="form-control" name="STaxRegNo" placeholder="Saletax Reg No." value="@Model.STaxRegNo">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="NationalTaxNo">National Tax No.</label>
                        <input type="number" id="NationalTaxNo" minlength="3" maxlength="25" class="form-control" name="NationalTaxNo" placeholder="NTN" value="@Model.NationalTaxNo">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <label for="company_website">Website</label>
                        <input type="text" id="company_website" minlength="3" maxlength="100" class="form-control" name="company_website" placeholder="Website" value="@Model.company_website">
                    </div>
                </div>

                <div class="col-12 d-flex justify-content-end">
                    <button type="button" id="btnSave" class="btn btn-primary me-1 mb-1" onclick="onEditSave()">Save</button>
                    <button type="reset" class="btn btn-light-secondary me-1 mb-1">Reset</button>
                </div>
            </div>
        </form>
    </div>
</div>

