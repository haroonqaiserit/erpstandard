<table hidden class="table table-striped dataTable-table" id="tblBranchReport">
    <thead>
        <tr>
            <th><a href="javascript:;" class="dataTable-sorter">Name</a></th>
            <th><a href="javascript:;" class="dataTable-sorter">Dscr</a></th>
            <th><a href="javascript:;" class="dataTable-sorter">Address</a></th>
            <th><a href="javascript:;" class="dataTable-sorter">AccountCode</a></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null)
            {
                foreach (var tbl in Model.Branches)
                {
                    <tr>
                        <td>@tbl.BranchName</td>
                        <td>@tbl.Dscr</td>
                        <td>@tbl.BranchAddress</td>
                        <td>@tbl.AcntId</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>

